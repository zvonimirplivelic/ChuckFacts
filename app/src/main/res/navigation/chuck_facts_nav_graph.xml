<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chuck_facts_navigation"
    app:startDestination="@id/navigation_single_fact">

    <fragment
        android:id="@+id/navigation_single_fact"
        android:name="com.zvonimirplivelic.chuckfacts.ui.fragments.SingleFactFragment"
        tools:layout="@layout/single_fact_fragment" >
        <argument
            android:name="fact_string"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_fact_list"
        android:name="com.zvonimirplivelic.chuckfacts.ui.fragments.FactListFragment"
        tools:layout="@layout/fact_list_fragment" >
        <action
            android:id="@+id/factList_to_singleFact"
            app:destination="@id/navigation_single_fact"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/navigation_fact_search"
        android:name="com.zvonimirplivelic.chuckfacts.ui.fragments.SearchFactsFragment"
        tools:layout="@layout/search_facts_fragment" />
</navigation>